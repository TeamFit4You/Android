<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        tools:context=".ui.view.basicstatuscheck.questions.UserHistoryFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_history_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/history_title"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ScrollView
                android:id="@+id/sv_checklist"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_history_title">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/tv_q1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/history_q1"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <CheckBox
                        android:id="@+id/tv_q1_yes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/history_yes"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="@+id/tv_q1"
                        app:layout_constraintTop_toBottomOf="@+id/tv_q1"
                        app:layout_constraintEnd_toStartOf="@+id/tv_q1_no"/>

                    <CheckBox
                        android:id="@+id/tv_q1_no"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/history_no"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="@+id/tv_q1"
                        app:layout_constraintTop_toBottomOf="@+id/tv_q1"
                        app:layout_constraintStart_toEndOf="@+id/tv_q1_yes"/>

                    <TextView
                        android:id="@+id/tv_q2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/history_q2"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_q1_yes"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <CheckBox
                        android:id="@+id/tv_q2_yes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/history_yes"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="@+id/tv_q2"
                        app:layout_constraintTop_toBottomOf="@+id/tv_q2"
                        app:layout_constraintEnd_toStartOf="@+id/tv_q2_no"/>

                    <CheckBox
                        android:id="@+id/tv_q2_no"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/history_no"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="@+id/tv_q2"
                        app:layout_constraintTop_toBottomOf="@+id/tv_q2"
                        app:layout_constraintStart_toEndOf="@+id/tv_q2_yes"/>

                    <LinearLayout
                        android:id="@+id/linear_q"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/tv_q2_yes"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <TextView
                            android:id="@+id/tv_q2_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/history_q2_1"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <CheckBox
                            android:id="@+id/cb_turtle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pain_part1_1"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>

                        <CheckBox
                            android:id="@+id/cb_rotator"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pain_part2_1"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>

                        <CheckBox
                            android:id="@+id/cb_disc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pain_part3_1"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>

                        <CheckBox
                            android:id="@+id/cb_chuck"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pain_part3_2"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>

                        <CheckBox
                            android:id="@+id/cb_tunnel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pain_part4_1"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_q3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/history_q3"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        app:layout_constraintTop_toBottomOf="@+id/linear_q"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>