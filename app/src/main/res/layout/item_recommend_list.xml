<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="recom"
            type="com.example.fit4you_android.data.model.RecommendData" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/round_corner_recom"
        android:elevation="5dp">

        <TextView
            android:id="@+id/recom_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{recom.bodyPart, default=@string/today_list_ex2}"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/separ"
            android:background="@color/login_back"
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@+id/recom_part"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/recom_spec1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="@{recom.spec1, default=@string/recom_spec1_1"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:background="@drawable/round_corner_recom_item"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/separ"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/recom_spec2"/>

        <TextView
            android:id="@+id/recom_spec2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="@{recom.spec2, default=@string/recom_spec1_2"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:background="@drawable/round_corner_recom_item"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/recom_spec1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/recom_spec3"/>

        <TextView
            android:id="@+id/recom_spec3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="@{recom.spec3, default=@string/recom_spec1_3"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:background="@drawable/round_corner_recom_item"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/recom_spec2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>